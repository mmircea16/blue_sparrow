#sinatra_authentication
  %h1.page_title Login
  %form{:action => "/login", :method => "post"}
    .control-group
      %label.control-label{:for => "user_email'"} Email
      %input{:id => "user_email", :name => "email", :size => 30, :type => "text"}
    .control-group
      %label.control-label{:for => "user_password"} Password
      %input{:id => "user_password", :name => "password", :size => 30, :type => "password"}
    .control-group
      .controls
        %input.btn.btn-primary{:value => "Login", :type => "submit"}

  %p
    %h4
      or
      %a.btn.btn-inverse{:href => "/signup", :class => 'sinatra_authentication_link'}
        Sign up
