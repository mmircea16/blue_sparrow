
%div
 %form{ :action => "/books", :method => "POST"}
  %fieldset
   %legend Add a new book

   %label Book title
   %div.input-append
    %input{ :type => "text", :id => "title", :placeholder => "The three musketeers", :name => "title"}
     %a.btn{ :href => "#search_modal", :'data-toggle' => "modal"} Search

   %label Amazon description
   %input{ :type => "text", :id => "amazon", :placeholder => "www.amazon.com", :name => "amazon_description"}

   %label ISBN - 13
   %input{ :type => "text", :id => "isbn", :placeholder => "a 13 character string", :name => "isbn"}


   %button{ :type => "submit", :class => "btn"} Add a new book



 %div#search_modal.modal.hide.fade{ :role => "dialog", :'tab-index' => -1}
  %div.modal-header
   %button.close{ :'data-dismiss' => 'modal' } x
   %h3 Search results
  %div.modal-body
   %table#results_table.table.table-hover
    %tbody#results_list
  %div.modal-footer
   %button.btn{ :'data-dismiss' => 'modal' } close



